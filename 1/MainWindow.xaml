        <Label x:Name="Res_L" Content="Результат" HorizontalAlignment="Left" Margin="341,277,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Number1_TB" HorizontalAlignment="Left" Margin="62,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Number2_TB" HorizontalAlignment="Left" Margin="301,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Polozh1" HorizontalAlignment="Left" Margin="62,346,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
